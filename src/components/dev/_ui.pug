    // section (Interface)
    section.dev__section
      h1.h1-title Интерфейс

      .dev-interface
        // ui upload
        .ui-upload.mt-2.js-ui-upload(data-allowed-mime="image, application" data-max-size="5" data-upload-btn=".js-file-upload-btn")
          input(type="file" id="file")
          label.ui-upload__trigger(for="file")
            span.btn.btn-outline.btn-outline--big.btn--block Выбрать файл
          .ui-upload__info
            .ui-upload__name
            .ui-upload__close.js-upload-close
              +svgMono('close-simple')

          button.js-file-upload-btn(type="submit" disabled).btn.btn-primary.btn--block Загрузить

        // Input
        .ui-group.mt-2
          label(for="ui_input_1") Лейбл инпута
          input.ui-input(type="text" id="ui_input_1")

        // Dates
        .ui-group.mt-2
          label(for="ui_input_2") Даты
          .row
            .col.col-6
              .ui-input-iconed
                input.ui-input.js-datepicker(type="date" id="ui_input_2")
                +svgMono('calendar')
            .col.col-6
              .ui-input-iconed
                input.ui-input.js-datepicker(type="date" id="ui_input_3")
                +svgMono('calendar')

        // Select
        .ui-group.mt-2
          label(for="dash_filter_2") Селект
          select.js-choices.ui-input(id="dash_filter_2")
            option() Все
            option() Текущие
            option() Завершенные
            option() Незавершенные

    // section (Interface)
    section.dev__section
      h1.h1-title Интерфейс

      .dev-btns
        a(href="#" data-micromodal-trigger="modalUploadDoc").btn.btn-primary Модальное modalUploadDoc
