      h1.h1-title Кнопки

      .dev-btns
        a(href="#").btn.btn-primary Btn Primary
        a(href='#').btn.btn-outline Btn outline

    // section
    section.dev__section
      h1.h1-title Типовые компоненты (молекулы)

      h3.h3-title.mt-2 Табы (js-tabs)

      // tabs content
      .dash__content.js-tabs
        .dash__nav-scroller
          ul.dash__nav.js-tabs-nav
            i.dash__nav-highlighter.js-nav-highlighter
            li.is-active
              a(href="#tab-1") Tab 1
            li
              a(href="#tab-2") Tab 2

        // NEXT TAB (TRACKING)
        .js-tab.mt-2(data-tab="tab-1" style="display: block")
          .h1-title Tab 1 content

        // NEXT TAB (INFO)
        .js-tab.mt-2(data-tab="tab-2")
          .h1-title Tab 2 content


    // section
