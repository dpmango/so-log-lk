  .mobile-navi__wrapper
    .mobile-navi__center


    .mobile-navi__bottom
      .mobile-navi__cta
        a(href="#").header__action.header__action--navi
          i.header__action-icon
            +svgMono('profile')
          span.header__action-text Профиль

        a(href="#").header__action.header__action--navi
          i.header__action-icon
            +svgMono('close')
          span.header__action-text Выйти

      .mobile-navi__contacts
        .header__contact.header__contact--navi
          a(href="tel:74950250022")
            span +7 (495) 025-00-22
        .header__contact.header__contact--navi
