// Upload doc modal
#modalUploadDoc.modal.micromodal-slide(aria-hidden='true')
  .modal__overlay(tabindex='-1' data-micromodal-close)
    .modal__container(role='dialog' aria-modal='true')
      .modal__close(aria-label='Close modal' data-micromodal-close)
        +svgMono('close-simple')
      header.modal__header.tac
        .h3-title.modal__title Загрузка документов

      main.modal__content
        .modal__form
          .row
            .col.col-6
              .ui-group
                label(for="modaldoc_name") Название документа
                input.ui-input(type="text" name="modaldoc_name" id="modaldoc_name" required)
            .col.col-6
              .ui-group
                label(for="modaldoc_num") Номер документа
                input.ui-input(type="text" name="modaldoc_num" id="modaldoc_num" required)

            .col.col-6
              .ui-group
                label(for="modaldoc_num") Дата документа
                .ui-input-iconed
                  input.ui-input.js-datepicker(type="date" name="modaldoc_num" id="modaldoc_num" required)
                  +svgMono('calendar')
            .col.col-6
              .ui-group
                .row
                  .col.col-6
                    .ui-upload
                      button().btn.btn-outline.btn-outline--big.btn--block Выбрать файл
                  .col.col-6
                    button(type="submit" disabled).btn.btn-primary.btn--block Загрузить

