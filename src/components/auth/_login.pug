// AUTH
.auth
  .container.container--6
    .auth__wrapper
      h3.auth__title.h3-title(data-aos="fade-down") Вход в личный кабинет

      form.auth__form.js-validate-form(data-aos="fade" data-success-function="funcNameCallbackSucces")
        .row
          .col.col-4.col-md-12
            .ui-group
              label(for="auth_login") Логин
              input.ui-input(type="text" name="login" id="auth_login" required)

          .col.col-4.col-md-12
            .ui-group
              label(for="auth_pass") Пароль
              input.ui-input(type="password" name="pass" id="auth_pass" minlength="6" required)

          .col.col-4.col-md-12
            .ui-group
              .btn.btn-primary Войти

          .col.col-4.col-md-12
            a(href="auth-forget.html").helper-link Забыли пароль?
          .col.col-4.col-md-12
            a(href="signup.html").helper-link Регистрация
