include ../supply/_mixins
// Dashboard
.dash
  .container.container--sidebar
    .dash__wrapper
      // head
      .dash__head(data-aos="fade")
        .h1-title.dash__head-title Текущие поставки
        .dash__head-link
          a(href="#").dashed-link Завершенные поставки
      .dash__filter.row(data-aos="fade")
        .col.col-3.col-xl-5.col-md-12
          .ui-group
            label(for="dash_filter_1") Номер поставки
            input.ui-input(type="text" id="dash_filter_1")

        .col.col-4.col-xl-7.col-md-12
          .ui-group
            label(for="dash_filter_1") Дата завершения
            .row.dash__dates-row
              .col.col-6
                .ui-input-iconed
                  input.ui-input.js-datepicker(type="date" id="dash_filter_2")
                  +svgMono('calendar')
              .col.col-6
                .ui-input-iconed
                  input.ui-input.js-datepicker(type="date" id="dash_filter_3")
                  +svgMono('calendar')

        .col.col-3.col-xl-5.col-md-12
          .ui-group
            label(for="dash_filter_4") Статус поставки
            select.js-choices.ui-input(id="dash_filter_4")
              option() Все
              option() Текущие
              option() Завершенные
              option() Незавершенные

        .col.col-2.col-xl-auto
          .ui-group
            button(type="submit").btn.btn-primary.btn--block Применить

